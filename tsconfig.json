{
  "compilerOptions": {
   "rootDir": "src",
   "outDir": "lib",
   "target": "es5",
   "module": "ESNext",
   "moduleResolution": "node",
   "jsx": "react",
   "forceConsistentCasingInFileNames": true,
   "esModuleInterop": true,
   "allowSyntheticDefaultImports": true,
   "importHelpers": true,
   "strict": true,
   "skipLibCheck": true,
   "declaration": true,
   "declarationDir": "types"
  },
  "exclude": ["node_modules"]
}